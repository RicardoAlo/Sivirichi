@model Laboratorio1_MVC_Sivirichi_A.Models.ClsOperaciones2
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h1><center><b>Operaciones Aritmeticas 2</b></center></h1>
        <br /><br />
        @using (Html.BeginForm("Calcular", "Operaciones2", FormMethod.Post))
            {
                <p>
                    @Html.LabelFor(model => model.valor1, "Ingrese numero 1: ")
                    @Html.EditorFor(model => model.valor1)
                </p>

                <p>
                    @Html.LabelFor(model => model.valor2, "Ingrese numero 2: ")
                    @Html.EditorFor(model => model.valor2)
                </p>

                <p>
                    @Html.LabelFor(model => model.operacion, "Seleccione Operacion: ")
                    @Html.DropDownListFor(model => model.operacion, new List<SelectListItem>
                    {
                      new SelectListItem() { Text = "Suma" , Value="S"},
                      new SelectListItem() { Text = "Resta" , Value="R"},
                      new SelectListItem() { Text = "Multiplicacion" , Value="M"},
                      new SelectListItem() { Text = "Division" , Value="D"}

                    }
                  )
                </p>
                <p>
                    <input type="submit" value="Calcular" />
                </p>
            }
        <br /><br />
    </div>
</body>
</html>
